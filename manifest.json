{
    "manifest_version": 2,
    "name": "Casual Quora",
    "version": "1.0.0",

    "description": "Removes the Quora login pop-up.",

    "background": {
        "scripts": ["src/background.js"]
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.quora.com/*"
    ],

    "icons": {
        "32": "icons/casual_quora_32.png",
        "48": "icons/casual_quora_48.png",
        "64": "icons/casual_quora_64.png",
        "128": "icons/casual_quora_128.png"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "carpenter.nicklas@gmail.com"
        }
    }
}